<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>

            <item
                android:width="25dp"
                android:height="25dp">

                <shape android:shape="oval">

                    <stroke
                        android:width="1dp"
                        android:color="#c7c7c7" />

                </shape>
            </item>

            <item
                android:width="25dp"
                android:height="25dp">

                <shape android:shape="oval">

                    <solid
                        android:color="#19afbf" />

                </shape>
            </item>

            <item
                android:width="11dp"
                android:height="11dp"
                android:top="7dp"
                android:left="7dp">

                <shape android:shape="oval">
                    <solid
                        android:color="#ffffff"/>
                </shape>

            </item>

        </layer-list>
    </item>

</selector>
