<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".AddContact">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Contact"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="8sp"
        android:textColor="#000"
        />
    <ImageView
        android:id="@+id/cancel"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:src="@drawable/ic_cancel_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <View
        android:layout_below="@id/sss"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ededed"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="140dp"
        android:background="#dedede" />

    <com.github.abdularis.civ.CircleImageView

        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_account_circle_black_24dp" />

    <ImageView
        android:id="@+id/done"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_done_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20sp"
        android:layout_marginTop="9sp"
        android:layout_alignParentRight="true" />

    <View
        android:id="@+id/sss"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/Name"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="213dp"
        android:layout_marginBottom="-13dp"
        android:backgroundTint="#ffffff"
        android:hint="Name"
        android:textSize="16dp" />

    <View
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="#dedede"
        android:layout_marginTop="258dp"
        />

    <TextView
        android:id="@+id/contactType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:text="Mobile"
        android:textColor="#000"
        android:textSize="15dp" />
    <ImageView
        android:id="@+id/contact_type_drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_drop_down_black_24dp"
        android:layout_marginTop="269dp"
        android:layout_marginLeft="60dp"/>


    <EditText
        android:layout_marginTop="13dp"
        android:id="@+id/Number"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/Name"
        android:hint="Number"
        android:inputType="number"
        android:layout_marginLeft="100dp"
        android:backgroundTint="#ffffff"
        />


    <View
        android:layout_centerHorizontal="true"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_marginTop="303dp"
        android:background="#dedede"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_below="@+id/Number"
        android:layout_centerHorizontal="true"
        />



    <View
        android:layout_centerHorizontal="true"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:background="#dedede"
        android:layout_marginTop="345dp"
        />

    <EditText
        android:layout_marginTop="41dp"
        android:paddingLeft="10dp"
        android:id="@+id/House_No"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_below="@+id/Number"
        android:hint="House No."
        android:backgroundTint="#ffffff"
        />

    <View
        android:layout_centerHorizontal="true"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:background="#dedede"
        android:layout_below="@+id/House_No"
        />

    <EditText
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:id="@+id/Street"
        android:textSize="16dp"
        android:layout_width="330dp"
        android:layout_centerHorizontal="true"
        android:layout_height="45dp"
        android:layout_below="@+id/House_No"
        android:hint="Street/Block"
        android:backgroundTint="#ffffff"
        />

    <View
        android:layout_centerHorizontal="true"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:background="#dedede"
        android:layout_below="@+id/Street"
        />

    <EditText
        android:layout_marginLeft="18dp"
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:id="@+id/City"
        android:textSize="16dp"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_below="@+id/Street"
        android:hint="City"
        android:backgroundTint="#ffffff"/>

    <EditText

        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:id="@+id/Country"
        android:textSize="16dp"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_toEndOf="@id/City"
        android:layout_below="@id/Street"
        android:hint="Country"
        android:backgroundTint="#ffffff"
        android:layout_toRightOf="@id/City" />

    <View

        android:layout_centerHorizontal="true"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:background="#dedede"
        android:layout_below="@+id/City"
        />

    <TextView
        android:id="@+id/AddressType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/City"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="13dp"
        android:text="Home"
        android:textColor="#000"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/address_type_drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_drop_down_black_24dp"
        android:layout_below="@+id/City"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="60dp"/>

    <EditText

        android:id="@+id/Email"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_below="@+id/City"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#ffffff"
        android:hint="Email"
        android:paddingLeft="10dp"
        android:textSize="16dp"

        />

    <View
        android:layout_centerHorizontal="true"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:background="#dedede"
        android:layout_below="@+id/Email"
        />



</RelativeLayout>